# =============================================================================
# MCP Platform Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=41789
POSTGRES_DB=base_mcp_dev
POSTGRES_USER=base_mcp_dev
POSTGRES_PASSWORD=mcp_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=11379

# =============================================================================
# MINIO (S3-compatible Object Storage) CONFIGURATION
# =============================================================================
MINIO_PORT=49723
MINIO_ROOT_USER=mcp_minio_root
MINIO_ROOT_PASSWORD=mcp_minio_password

# =============================================================================
# HASHICORP VAULT CONFIGURATION
# =============================================================================
VAULT_PORT=11820
VAULT_DEV_ROOT_TOKEN_ID=mcp_vault_root_token

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
# Google OAuth 2.0 Configuration
# Get credentials from: https://console.developers.google.com/
# 1. Create a new project
# 2. Enable Google+ API and Google People API
# 3. Create OAuth 2.0 Client ID for Web Application
# 4. Add authorized redirect URI: https://yourdomain.com/auth/google/callback

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth Application Configuration
# Get credentials from: https://github.com/settings/applications/new
# 1. Create a new OAuth App
# 2. Set Authorization callback URL: https://yourdomain.com/auth/github/callback
# 3. Note: For development, you can use http://localhost:4000/auth/github/callback

GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OAuth Configuration
OAUTH_CALLBACK_BASE_URL=https://platform.base.do
# For development: OAUTH_CALLBACK_BASE_URL=http://localhost:4000

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Secret key base for Phoenix sessions and JWT tokens
# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=your_super_long_random_secret_key_base_here_at_least_64_characters

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
MIX_ENV=dev

# Application host and port
HOST=localhost
PORT=4000

# =============================================================================
# EMAIL CONFIGURATION (for notifications, password reset, etc.)
# =============================================================================
# For development, you can use a service like Mailgun, SendGrid, or local SMTP
# Example using local SMTP (for testing only):
# MAILER_ADAPTER=Swoosh.Adapters.Local

# Example using SMTP:
# MAILER_ADAPTER=Swoosh.Adapters.SMTP
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_TLS=:always

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# LiveView signing salt
LIVE_VIEW_SIGNING_SALT=your_live_view_signing_salt_here

# Cookie signing salt
COOKIE_SIGNING_SALT=your_cookie_signing_salt_here

# Session signing salt
SESSION_SIGNING_SALT=your_session_signing_salt_here

# =============================================================================
# MEILISEARCH CONFIGURATION (for search functionality)
# =============================================================================
MEILISEARCH_PORT=46291
MEILISEARCH_MASTER_KEY=your_meilisearch_master_key_here

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
# Options: debug, info, warn, error

# =============================================================================
# MONITORING AND TELEMETRY
# =============================================================================
# Application name for telemetry
APP_NAME=mcp_platform

# Environment name
ENVIRONMENT=development
# Options: development, staging, production

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for API requests
# For development: "http://localhost:3000,http://localhost:4000"
# For production: "https://yourdomain.com,https://www.yourdomain.com"

CORS_ORIGINS=http://localhost:4000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_OAUTH_SIGN_IN=true
ENABLE_TOTP_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true

# =============================================================================
# THE EYE (Document Intelligence) CONFIGURATION
# =============================================================================
THE_EYE_PORT=48291

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# URLs for external services
GOOGLE_AUTH_URL=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URL=https://oauth2.googleapis.com/token
GOOGLE_USER_INFO_URL=https://www.googleapis.com/oauth2/v2/userinfo
GOOGLE_PEOPLE_URL=https://www.googleapis.com/oauth2/v2/userinfo

GITHUB_AUTH_URL=https://github.com/login/oauth/authorize
GITHUB_TOKEN_URL=https://github.com/login/oauth/access_token
GITHUB_USER_INFO_URL=https://api.github.com/user
GITHUB_USER_EMAILS_URL=https://api.github.com/user/emails

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development tools
ENABLE_PHOENIX_LIVE_RELOAD=true
ENABLE_PHOENIX_DEV_TOOLS=true

# Database pool size for development
DB_POOL_SIZE=10

# OpenRouter API Configuration
OPENROUTER_API_KEY=sk-or-v1-
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# =============================================================================
# MIX_ENV=prod
# SECRET_KEY_BASE=production_secret_key_here
# HOST=0.0.0.0
# PORT=443
# LOG_LEVEL=warn
# CORS_ORIGINS=https://platform.base.do
# OAUTH_CALLBACK_BASE_URL=https://platform.base.do
# ENABLE_PHOENIX_LIVE_RELOAD=false
# ENABLE_PHOENIX_DEV_TOOLS=false